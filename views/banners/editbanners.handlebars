<div ng-controller="editbannersController"  nv-file-drop="" uploader="uploader">
	<section class="panel panel-inverse">
		<div class="row" ng-show="divedit">
			<div class="panel-body">
				<button class="btn btn-primary m-r-5 m-b-5" ng-click="saveeditbanner()">Lưu</button>
			</div>
		
				<div class="form-group">
					<label class="col-sm-3 control-label">Tên bài viết</label>
					<div class="col-sm-9"><input class="form-control"   ng-model="newpageinfo.name" required="true" ng-change="changeurl()"></div>
				</div>

				<div class="form-group">
					<label class="col-sm-3 control-label">Danh mục</label>
					<div class="col-sm-9">
							<select name ="bannercat" class="form-control" ng-model="bannercat" ng-options="cats as cats.detail[0].name for cats in newscats" required="true" ></select>
					</div>
				</div>

				<div class="form-group">
					<label class="col-sm-3 control-label">Hình ảnh</label>
					<div class="col-sm-9">
						<div ng-repeat="item in uploader.queue">
							<div ng-show="uploader.isHTML5" ng-thumb="{ file: item._file, height: 80 }"></div>
							<strong>{{ item.file.name }}</strong>
							<button type="button" class="btn btn-danger btn-xs" ng-click="item.remove()">
                                <span class="glyphicon glyphicon-trash"></span> Remove
                            </button>
						</div>
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-3 control-label">Hình ảnh</label>
					<div class="col-sm-9">
						<input type="file" nv-file-select="" uploader="uploader" />
					</div>
				</div>

				
			<div class="panel-body">
				<button class="btn btn-primary m-r-5 m-b-5" ng-click="saveeditbanner()">Lưu</button>
			</div>
		</div>
	</section>
</div>
